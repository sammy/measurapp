.row
  .small-12.columns
    %h2 #{fa_icon 'users'} My Groups 
    %hr
    .row
      .small-6.columns
        = submit_tag 'New Group', class: 'button success radius small'
      .small-3.columns
      .small-3.columns
        = text_field_tag :search, 'search', class: 'radius'
    %table{width: '100%'}
      %thead
        %tr
          %th Name
          %th Number of Units
          %th Last Updated
          %th Measures
          %th Actions
        %tbody
          - @groups.each do |group|
            %tr
              %td= group.name
              %td 14
              %td= group.updated_at
              %td 
                %span.has_tip.radius{ title: "has book | midterm grade | presence", data: { :tooltip => 1}} 3 assigned
              %td
                =  link_to "View"
                |
                =  link_to "Edit"
                |
                =  link_to "Delete"
            