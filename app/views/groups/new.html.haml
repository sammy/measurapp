.row
  .small-12.columns
    %h2 #{fa_icon 'plus-circle'} New Group 
    %hr
    = form_for @group do |f|
      
      .row
        .small-5.columns
          .small-3.columns
            = f.label :name, 'Name', class: 'left inline'
          .small-9.columns
            = f.text_field :name, class: 'radius'
      
      .row
        .small-5.columns
          .small-3.columns
            = f.label :description, 'Description', class: 'left inline'
          .small-9.columns
            = f.text_area :description, rows: '5', class: 'radius'

      .row
        .small-5.columns
          .small-3.columns
            = f.label :items, 'Items', class: 'left inline'
          .small-9.columns
            .test 
              HAMLED OUT
              
            .test 
              Normal HTML
              %select{:multiple => 'multiple', :id => 'transfer_select', :name => 'my-select', :class => 'searchable'}
                %option{value: 1} Item 1
                %option{value: 2} Item 2
                %option{value: 3} Item 3
                %option{value: 4} Item 4
                %option{value: 5} Item 5

      .row
        .small-6.columns
          = f.submit "Save", class: 'button success small radius right'