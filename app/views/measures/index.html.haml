.row
  .small-12.columns
    %h2 #{fa_icon 'sort-amount-desc'} Measures
    %hr
    .row
      .small-6.columns
        =link_to "Create Measure", new_measure_path, class: 'button small success dropdown radius' 
        / %a{ href: '#', class: 'button small success dropdown radius', data: {dropdown: 'actions'}} Create Measure
        / %ul{ id: 'actions', class: 'f-dropdown'}
        /   %li #{fa_icon 'plus'} Boolean
        /   %li #{fa_icon 'plus'} Scale
        / = submit_tag 'New Unit', class: 'button success radius small'
      .small-3.columns
      .small-3.columns
        = text_field_tag :search, 'search', class: 'radius'

    =render 'measures_table' if @measures
    =render 'shared/no_objects_message', :object => 'measures' if @measures.empty?


            

