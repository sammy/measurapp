.row
  .small-12.columns
    %h2 #{fa_icon 'plus-circle'} New Unit 
    %hr
    %form
      
      .row
        .small-5.columns
          .small-3.columns
            =label_tag :name, 'Name', class: 'left inline'
          .small-9.columns
            =text_field_tag :name, nil ,class: 'radius'
      
      .row
        .small-5.columns
          .small-3.columns
            =label_tag :description, 'Description', class: 'left inline'
          .small-9.columns
            =text_area_tag :description, nil, rows: '5', class: 'radius'

      .row
        .small-5.columns
          .small-3.columns
            =label_tag :items, 'Groups', class: 'left inline'
          .small-9.columns
            %select{:multiple => 'multiple', :id => 'transfer_select', :name => 'my-select', :class => 'searchable'}
              %option{value: 1} Group 1
              %option{value: 2} Group 2
              %option{value: 3} Group 3
              %option{value: 4} Group 4
              %option{value: 5} Group 5

      .row
        .small-6.columns
          %a.button.success.small.radius.right Save